// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String    @unique
  workouts  Workout[]
}

model Workout {
  id             Int                       @id @default(autoincrement())
  dateCreated    DateTime                  @default(now())
  dateExecuted   DateTime?
  caloriesBurned Int?
  exercises      ExercisesWorkoutSetLink[]
  user           User?                     @relation(fields: [userId], references: [id])
  userId         Int?
}

model MuscleGroup {
  id        Int        @id @default(autoincrement())
  name      String
  color     String
  exercises Exercise[]
}

model Exercise {
  id                      Int                       @id @default(autoincrement())
  targetMuscle            MuscleGroup               @relation(fields: [targetMuscleId], references: [id])
  targetMuscleId          Int
  name                    String
  ExercisesWorkoutSetLink ExercisesWorkoutSetLink[]
}

model Set {
  id                   Int                       @id @default(autoincrement())
  reps                 Int
  weight               Int
  isPersonalRecord     Boolean
  ExercisesWorkoutLink ExercisesWorkoutSetLink[]
}

model ExercisesWorkoutSetLink {
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId Int
  workout    Workout  @relation(fields: [workoutId], references: [id])
  workoutId  Int
  set        Set      @relation(fields: [setId], references: [id])
  setId      Int

  addDate DateTime @default(now())

  @@id([exerciseId, workoutId, setId])
}
